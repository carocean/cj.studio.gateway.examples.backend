<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cj.studio.gateway.examples.uc.plugin.dao.IUserDAO">

	<resultMap id="resultMap" type="cj.studio.gateway.examples.backend.usercenter.bo.UserBO">
		<result column="id" property="id" jdbcType="CHAR" />
		<result column="name" property="name" jdbcType="CHAR" />
	</resultMap>
	<!--添加 -->
	<insert id="save" parameterType="cj.studio.gateway.examples.backend.usercenter.bo.UserBO">
		insert INTO user(id,name,age) VALUES(#{id},#{name},#{age})
	</insert>
	<!--查询 -->
	<select id="query" resultMap="resultMap">
		select * from user
	</select>
	<select id="query2" resultMap="resultMap">
		select * from user where name=#{name} and age=#{age}
	</select>
	<select id="getUser" resultType="cj.studio.gateway.examples.backend.usercenter.bo.UserBO" parameterType="java.lang.String">
		select * from user where id=#{id}
	</select>
	<!--删除 -->
	<delete id="delete" parameterType="java.lang.String">
		delete from user where
		id=#{id,jdbcType=CHAR}
	</delete>

</mapper>